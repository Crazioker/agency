/* pages/publish/publish.wxss */
.root{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  background-color: white;
}
.secondRoot{
  padding-top: 120rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  padding-bottom: 120rpx;
  background-color: #bfc5f0;
  border-radius: 20rpx;
}
.selectView{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  margin-bottom: 20px;
  border-radius: 8px;
}
.txtContent{
  margin-top: 20px;
  font-size: 14px;
  font-family: "Microsoft YaHei";
  font-weight: bold;
}
.content{
  width: 300px;
  height:60px;
  margin-top: 15px;
  margin-bottom: 25px;
  outline-width: 2px;
  outline-color: white;
  outline-style: solid;
}
.payRoot{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.timeRoot{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  margin-top: 20px;
  margin-bottom: 20px;
}
.price{
  margin-left: 10px;
  width: 80px;
  outline-width: 2px;
  outline-color: white;
  outline-style: solid;
}
.picker{
  margin-left: 10px;
  border: 2px solid white;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150px;
  height: 100%;
}
.publishButton{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 35px;
  color: #fff;
  background-color:#7e8ef0;
  border: 0.1rpx solid #ccc;
  border-radius: 40rpx;
  font-size: 30rpx;
}