<!--pages/info/info.wxml-->
<view class="page">
  <view class="weui-form">
    <!-- <view class="weui-form__control-area"> -->
      <view class="weui-cells__group weui-cells__group_form">
      <view class="weui-cells__title">修改个人信息</view>
        <view class="weui-cells weui-cells_form">
          <view class="weui-cell">
            <view class="weui-cell__hd">
              <label class="weui-label">学院：</label>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="{{academy}}" bindinput="getAcademy"/>
            </view>
          </view>
          <view class="weui-cell">
            <view class="weui-cell__hd">
              <label class="weui-label">用户名：</label>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="{{username}}" bindinput="getUsername"/>
            </view>
          </view>
          <view class="weui-cell">
            <view class="weui-cell__hd">
              <label class="weui-label">电话号码：</label>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" type="number" placeholder="{{phoneNum}}" bindinput="getPhoneNum"/>
            </view>
          </view>
          <view class="weui-cell">
            <view class="weui-cell__hd">
              <label class="weui-label">收货地址：</label>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="{{address}}" bindinput="getAddress"/>
            </view>
          </view>
        </view>
      </view>
    <!-- </view> -->
    <view class="weui-form__opr-area">
      <button class="saveBtn" bindtap="save">保存</button>
    </view>
  </view>
</view>
